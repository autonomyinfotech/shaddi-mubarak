<% if user_signed_in? %>
<div class="pace  pace-inactive">
  <div class="pace-progress" data-progress-text="100%" data-progress="99" style="width: 100%;">
  <div class="pace-progress-inner"></div>
  </div>
  <div class="pace-activity"></div>
</div>
  <header class="header">
    <%= link_to "#{current_user.hall_name}",'#', class: "logo"%>

    <nav class="navbar navbar-static-top" role="navigation">
      <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      </a>

      <div class="navbar-right">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="glyphicon glyphicon-user"></i>
              <span><%= current_user.username %><i class="caret"></i></span>
            </a>
            
            <ul class="dropdown-menu">
              <li class="user-header bg-light-blue">
                  <img src="" class="img-circle" alt="User Image">
                  <p>
                      <%= current_user.full_name %>
                      <small><%= current_user.role %></small>
                  </p>
              </li>
                            
              <li class="user-footer">
                <div class="pull-left">
                <%= link_to "#{t('profile')}", edit_user_registration_path, :class => 'navbar-link btn btn-default btn-flat'%>
                </div>
                <div class="pull-right">
                <%= link_to "#{t('sign_out')}",destroy_user_session_path, method: :delete, :class => 'navbar-link btn btn-default btn-flat'%>
                </div>
            </li>
            </ul>

          </li>
        </ul>
      </div>
    </nav>
  </header>

  <div class="wrapper row-offcanvas row-offcanvas-left" style="min-height: 631px;">
    <aside class="left-side sidebar-offcanvas collapse-left" style="min-height: 1767px;">
      <section class="sidebar">
        <%= render 'layouts/admin_bar' %>
      </section>
    </aside>

    <aside class="right-side strech">
        <%= yield %>
    </aside>
  </div>
<% end %>
