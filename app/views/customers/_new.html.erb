<div class="panel">
    <div class="panel-body">
        <h2>Add Customer Details</h2>
    </div>
    <div class="panel-footer">
		<%= form_for @customer,url:{action: 'create',event_id: @event.id}, remote:true do |f| %>

		  <%= customer_error_messages! %>
		  <div class="form-group">
		    <%= f.label :first_name %>
		    <%= f.text_field :first_name, placeholder: 'First Name', class: "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :last_name %>
		    <%= f.text_field :last_name, placeholder: 'Last Name', class: "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :address %>
		    <%= f.text_field :address, placeholder: 'Address',class: "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :mobile_1 %>
		    <%= f.text_field :mobile1, placeholder: 'Mobile-1',class: "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :mobile_2 %>
		    <%= f.text_field :mobile2, placeholder: 'Mobile-2',class: "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :phone_no %>
		    <%= f.text_field :phone_no, placeholder: 'Phone No',class: "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :email %><br>
		     <%= f.email_field :email, placeholder: 'Email',class: "form-control"%>
		  </div>
		  <div class="form-group">
		    <%= f.submit 'Add', class: "btn btn-primary btn-lg" %>
		  </div>
		<% end %>
	</div>
</div>