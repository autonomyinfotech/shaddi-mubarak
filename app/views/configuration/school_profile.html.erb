<section class="content">
  <div class="row">
  	<div class="col-xs-2"></div>
    <div class="col-xs-8">
        <h2 class="page-header">
            <i class="fa fa-institution"></i> <%= t('hall_profile') %>
            <small class="pull-right"><h5><%= t('registration_date')%>: <%= @hall.created_at.to_date%></h5></small>
        </h2>
    </div>
	</div>
	<div class="row">
	  	<div class="col-xs-2"></div>
	    <div class="col-xs-8 table-responsive">
	        <p class="lead"><%= @hall.name.capitalize %></p>
	        <div class="row invoice-info">
	        	<div class="col-sm-1"></div>
                <div class="col-sm-3 invoice-col">
                    <address>
                        <strong><%= t('address') %></strong><br>
                        <%= @hall.address %>
                    </address>
                </div>
                <div class="col-sm-2 invoice-col">
                    <address>
                        <strong><%= t('phone') %></strong><br>
                        <%= @hall.phone_no %>
                    </address>
                </div>
                <div class="col-sm-2 invoice-col">
                    <address>
                        <strong><%= t('language') %></strong><br>
                        <%= hall_language %>
                    </address>
                </div>
            </div>
	    </div>
	</div>
</section>