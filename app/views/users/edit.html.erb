<section class="content-header">
    <h1>
    <a href="#"><i class="fa fa-user"></i></a>
        <%= @user.full_name %>
        <small><%= t('users') %></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/users"><i class="fa fa-user"></i> <%= t('users') %></a></li>
        <li class="active"><%= @user.full_name %></li>
    </ol>
</section>
<div id="alert"><%= render 'layouts/alert' %></div>
<section class="content">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title"><%= t('change_password') %></h3>
        </div>

<%= form_for @user,url:{action:'update',id: @user.id}, method: :patch do |f| %>
   <div class="box-body">
   <%= user_error_messages! %>
        <div class="form-group">
        <%= f.label "#{t('new_password')}"%>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true, placeholder:"#{t('new_password')} (#{@minimum_password_length} #{t('characters_minimum')})"%>
        </div>
        <div class="form-group">
        <%= f.label "#{t('confirmation_password')}"%>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true, placeholder:"#{t('confirmation_password')}"%>
        </div>
   </div>                     
   <div class="box-footer">
     <%= f.submit "#{t('change')}", class: "btn btn-success"%>
   </div>
<% end %>
   </div>
  </div>
 </div>
</section>