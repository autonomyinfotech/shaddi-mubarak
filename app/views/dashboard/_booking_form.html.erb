<div class="panel">
    <div class="panel-body">
        <h2>Add Booking</h2>
    </div>
    <div class="panel-footer">
      <%= form_for @book, url:{ action: 'create_booking' },remote:true do |f| %>

        <div class="form-group">
        <%= f.date_field :start_date, value: @date, class: "form-control", order: [:day, :month, :year]%>
        </div>

        <div class="form-group">
        <%= f.date_field :end_date, value: @date, class: "form-control"%>
        </div>

        <div class="form-group">
        <%= f.text_field :booker, placeholder: "Customer Name", class: "form-control"%>
        </div>
        
        <div class="form-group">
        <%= f.submit "Add", class: "btn btn-primary btn-lg" %>
        </div>    
      <% end %>
    </div>
</div>