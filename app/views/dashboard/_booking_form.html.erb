<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Add Booking</h3>
    </div>
<% form_for @book, url:{ action: 'create_booking' } do |f| %>
    <div class="box-body">
        <div class="input-group">
        <%= f.date_field :start_date, value: @date.to_date, class: "form-control"%>
        </div>
        <div class="input-group">
        <%= f.date_field :end_date, value: @date.to_date, class: "form-control"%>
        </div>
        <div class="input-group">
        <%= f.text_field :booker, class: "form-control"%>
        </div>
        <div class="input-group-btn">
        <%= f.submit 'Add',  class: "btn btn-default btn-flat"%>
        </div>
    </div>
<%end%>
</div>         