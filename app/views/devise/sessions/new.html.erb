<section style="background-image: url(/assets/sign-in.jpg)">
<div class="container">
  <div class="row">
    <div class="col-md-8"></div>
    <div class="col-md-4">
      <div class="panel" style="display: initial;">
        <div class="panel-body">
            <h1><%= t('sign_in') %></h1>
        </div>
        <div class="panel-footer">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div id="alert"><%= render 'layouts/alert' %></div>

                <div class="form-group">
                  <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "#{t('username')}" %>
                </div>
              
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "#{t('password')}" %>
                </div>

                <div class="form-group">
                  <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %> <%= f.label "#{t('remember_me')}",style:"color:#fff;"%>
                  <% end %>
                </div>
                      
                <div class="form-group">
                  <%= f.submit "#{t('sign_in')}", class: "btn btn-primary btn-lg" %>
                </div>
              <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</section>