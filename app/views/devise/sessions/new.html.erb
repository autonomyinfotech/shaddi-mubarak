<!DOCTYPE html>
<html>
<head>
  <title><%= t('swarajya_login') %></title>
  <%= stylesheet_link_tag 'application'%>
</head>
<body class="bg-black">

<div class="form-box" id="login-box">
    <div class="header"><%= t('sign_in') %></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="body bg-gray">
        <div id="alert"><%= render 'layouts/alert' %></div>
            <div class="form-group">
            <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "#{t('user_id')}" %>
            </div>
            <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "#{t('password')}" %>
            </div>          
            <div class="form-group">
            <% if devise_mapping.rememberable? %>
			<%= f.check_box :remember_me %> <%= f.label "#{t('remember_me')}" %>
			<% end %>
            </div>
        </div>

	    <div class="footer">
	    <%= f.submit "#{t('sign_in')}", class: "btn bg-olive btn-block" %>

	    	<%= render "devise/shared/links" %>

	    </div>
	<% end %>
</div>
</body>
</html>