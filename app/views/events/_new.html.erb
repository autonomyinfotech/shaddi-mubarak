<div class="panel">
    <div class="panel-body">
        <h2>Add Booking</h2>
    </div>
    <div class="panel-footer">
		<%= form_for @event, remote:true do |f| %>

		  <%= event_error_messages! %>
		  <div class="form-group">
		    <%= f.label :event_type %>
		    <%= f.select :event_type_id,@event_types.collect {|e| [e.name,e.id]},{prompt: 'Select event type'},{class: "form-control"} %>
		  </div>
		  <div class="form-group">
		    <%= f.label :start_date %>
		    <%= f.date_field :start_date, value: @date, class: "form-control"%>
		  </div>
		  <div class="form-group">
		    <%= f.label :end_date %><br>
		     <%= f.date_field :end_date, value: @date, class: "form-control"%>
		  </div>
		  <div class="form-group">
		    <%= f.submit 'Add', class: "btn btn-primary btn-lg" %>
		  </div>
		<% end %>
	</div>
</div>