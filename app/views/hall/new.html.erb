<div class="container">
  <div class="row">
    <div class="panel" style="display:initial;">
      <div class="panel-body">
        <h2><i class="fa fa-institution"></i> <a>Hall Profile</a></h2>
          <ol class="breadcrumb">
            <li class="active">Please... Complete your hall profile</li>
          </ol>
      </div>
      <div class="panel-footer">
      <div id="alert"><%= render 'layouts/alert' %></div>
      
      <%= form_for @hall,url:{action:'create'} do |f| %>
      
    <div class="col-md-1"></div>
    <div class="col-md-5">
      <%= hall_error_messages! %>
       <div class="form-group">
           <%= f.label "#{t('hall_name')}"%>
           <%= f.text_field :name, class: "form-control", placeholder: "#{t('hall_name')}"%>
       </div>
       <div class="form-group">
           <%= f.label "#{t('hall_address')}"%>
           <%= f.text_field :address, class: "form-control", placeholder: "#{t('hall_address')}"%>
       </div>
       <div class="form-group">
           <%= f.label "#{t('hall_phone_no')}"%>
           <%= f.text_field :phone_no, class: "form-control", placeholder: "#{t('hall_phone_no')}"%>
       </div>
       <div class="form-group">
           <%= f.label :hall_type %>
           <%= f.text_field :hall_type, class: "form-control", placeholder: 'Hall type'%>
       </div>
    </div>
    <div class="col-md-5">
       <div class="form-group">
           <%= f.label :no_of_floors %>
           <%= f.text_field :no_of_floors, class: "form-control", placeholder: 'No of floors'%>
       </div>
       <div class="form-group">
           <%= f.label :hall_capacity %>
           <%= f.text_field :hall_capacity, class: "form-control", placeholder: 'Hall capacity'%>
       </div>
       <div class="form-group">
           <%= f.label "#{t('language')}"%>
           <%= f.select :language,[[t('english'),'en'],[t('marathi'),'mr'],[t('hindi'),'hi']],{prompt: "#{t('select_language')}"},{class: "form-control",required: true} %>
       </div>
       <div class="form-group">
           <%= f.label 'Upload photo'%>
           <%= f.file_field :image, placeholder: "#{t('choose_file')}", class: "form-control" %>
       </div> 
    </div>
       <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-5">
          <%= f.submit "Create", class: "btn btn-primary"%>
        </div>
      </div>
    <% end %><br/><br/>
    </div>
   </div>
  </div>
 </div>
</div>
