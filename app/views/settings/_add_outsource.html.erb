<div class="modal-dialog">
	<div class="col-md-6">
	<div class="modal-content">
		<div class="modal-header">
			<h3>New Outsource</h3>
		</div>
		<div class="modal-body">
	    <ul class="errors"></ul>
	    <%= form_for @outsource,url:{action: 'create_outsource'},remote: true do |f|%>
	        <div class="form-group">
	            <%= f.select :service_id,@services.collect{|s| [s.name, s.id]},{prompt: 'Select service'},{class: "form-control"} %>
	        </div>
	        <div class="form-group">
	            <%=f.text_field :name, placeholder:'Name', class: "form-control"%>
	        </div>
	        <div class="form-group">
	            <%=f.text_field :mobile1, placeholder:'Mobile no-1', class: "form-control"%>
	        </div>
	        <div class="form-group">
	            <%=f.text_field :mobile2, placeholder:'Mobile no-2', class: "form-control"%>
	        </div>
	        <div class="form-group">
	            <%=f.text_field :phone, placeholder:'phone no',class: "form-control"%>
	        </div>
	        <div class="form-group">
	            <%=f.email_field :email, placeholder:'email',class: "form-control"%>
	        </div>
		    <div class="modal-footer">
		        <%= f.submit 'Submit', class: "btn btn-primary"%>
		        <%= link_to 'Close', '#', class: "btn btn-default", :'data-dismiss'=>"modal"%>
		    </div>
		<% end %>
		</div>
	</div></div>
</div>